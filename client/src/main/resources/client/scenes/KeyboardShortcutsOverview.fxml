<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.1"
      fx:controller="client.scenes.KeyboardShortcutsOverviewCtrl"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
    <Label text="Keyboard Shortcuts" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <ListView>
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Label text="%shortcuts.esc"/>
                <Label text="%shortcuts.add"/>
                <Label text="%shortcuts.navigate.notes"/>
                <Label text="%shortcuts.navigate.collections"/>
            </FXCollections>
        </items>
    </ListView>
    <Button text="%shortcuts.close" onAction="#closeWindow" id="closeWindowButton"/>
</VBox>
